generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(cuid())
  email            String         @unique
  password         String
  name             String?
  role             Role           @default(USER)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  phone            String?
  twoFactorEnabled Boolean        @default(false)
  twoFactorSecret  String?
  address          String?
  city             String?
  pincode          String?
  state            String?
  resetToken       String?
  resetTokenExpiry DateTime?
  cart             Cart?
  certificates     Certificate[]
  classBookings    ClassBooking[]
  purchases        Purchase[]
  reviews          Review[]
  shopOrders       ShopOrder[]
  progress         Progress[]
}

model Admin {
  id               String   @id @default("admin")
  email            String   @unique
  password         String
  twoFactorSecret  String?
  twoFactorEnabled Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Course {
  id             String        @id @default(cuid())
  title          String
  subtitle       String?
  description    String
  price          Int
  originalPrice  Int?
  duration       String
  lessons        Int
  level          String
  language       String        @default("Hindi/English")
  thumbnail      String?
  instructor     String        @default("Kashmira Chakraborty")
  rating         Float         @default(4.8)
  students       Int           @default(0)
  featured       Boolean       @default(false)
  published      Boolean       @default(true)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  whatYouLearn   String[]
  requirements   String[]
  trailerUrl     String?
  popular        Boolean       @default(false)
  seoDescription String?
  seoKeywords    String?
  seoTitle       String?
  certificates   Certificate[]
  purchases      Purchase[]
  reviews        Review[]
  curriculum     Section[]
  progress       Progress[]
}

model Section {
  id       String  @id @default(cuid())
  title    String
  lessons  Int
  duration String
  order    Int
  courseId String
  course   Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  videos   Video[]
}

model Video {
  id          String  @id @default(cuid())
  title       String
  description String?
  youtubeUrl  String
  duration    String
  order       Int
  isPreview   Boolean @default(false)
  sectionId   String
  section     Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
}

model Purchase {
  id                String   @id @default(cuid())
  userId            String
  courseId          String
  amount            Int
  status            String   @default("pending")
  createdAt         DateTime @default(now())
  razorpayOrderId   String?
  razorpayPaymentId String?
  razorpaySignature String?
  updatedAt         DateTime @default(now()) @updatedAt
  course            Course   @relation(fields: [courseId], references: [id])
  user              User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model Progress {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  videoId   String
  timestamp Int      @default(0)
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId, videoId])
  @@map("video_progress")
}

model SiteContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("text")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClassBooking {
  id        String   @id @default(cuid())
  userId    String
  classType String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  phone     String
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  rating    Int      @db.SmallInt
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model Certificate {
  id            String   @id @default(cuid())
  userId        String
  courseId      String
  certificateId String   @unique
  issuedAt      DateTime @default(now())
  course        Course   @relation(fields: [courseId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model CertificateSettings {
  id                  String   @id @default(cuid())
  templateUrl         String   @default("/certificates/template.png")
  studentNameX        Int      @default(562)
  studentNameY        Int      @default(400)
  courseTitleX        Int      @default(562)
  courseTitleY        Int      @default(500)
  dateX               Int      @default(150)
  dateY               Int      @default(700)
  certificateIdX      Int      @default(973)
  certificateIdY      Int      @default(700)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  certificateIdHeight Int      @default(30)
  certificateIdWidth  Int      @default(120)
  courseTitleHeight   Int      @default(40)
  courseTitleWidth    Int      @default(250)
  dateHeight          Int      @default(30)
  dateWidth           Int      @default(150)
  studentNameHeight   Int      @default(40)
  studentNameWidth    Int      @default(200)
}

model ShopProduct {
  id             String                 @id @default(cuid())
  name           String
  slug           String                 @unique
  description    String
  price          Float
  images         String[]
  badge          String?
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  isActive       Boolean                @default(true)
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  categoryId     String?
  isFeatured     Boolean                @default(false)
  configurations ProductConfiguration[]
  variants       ProductVariant[]
  category       ProductCategory?       @relation(fields: [categoryId], references: [id])
  tags           ProductTag[]           @relation("ProductTagToShopProduct")
}

model ProductCategory {
  id        String        @id @default(cuid())
  name      String        @unique
  slug      String        @unique
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  products  ShopProduct[]
}

model ProductTag {
  id        String        @id @default(cuid())
  name      String        @unique
  slug      String        @unique
  color     String        @default("#8B5CF6")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  products  ShopProduct[] @relation("ProductTagToShopProduct")
}

model ProductVariant {
  id        String      @id @default(cuid())
  productId String
  name      String
  price     Float?
  images    String[]    @default([])
  product   ShopProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model CustomSongOrder {
  id                String   @id @default(cuid())
  occasion          String
  recipientName     String
  story             String
  mood              String
  style             String
  language          String   @default("English")
  length            String
  status            String   @default("pending")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  fullAudioUrl      String?
  previewUrl        String?
  amount            Int
  deliveryType      String
  razorpayOrderId   String?
  userEmail         String
  posterUrl         String?
  isApproved        Boolean  @default(false)
  razorpayPaymentId String?
  adminResetCount   Int      @default(0)
  repaymentCount    Int      @default(0)
  orderIdHistory    Json     @default("[]")
}

model CustomSongSettings {
  id            Int      @id @default(1)
  standardPrice Int      @default(2999)
  expressPrice  Int      @default(4499)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SongSource {
  id             String                 @id @default(cuid())
  type           String
  fileUrl        String?
  externalUrl    String?
  metadata       Json                   @default("{}")
  createdAt      DateTime               @default(now())
  configurations ProductConfiguration[]
}

model ProductConfiguration {
  id            String      @id @default(cuid())
  productId     String
  songSourceId  String?
  variant       String
  customText    String?
  recipientName String
  occasion      String?
  createdAt     DateTime    @default(now())
  songData      Json?
  songType      String?
  cartItems     CartItem[]
  product       ShopProduct @relation(fields: [productId], references: [id])
  songSource    SongSource? @relation(fields: [songSourceId], references: [id])
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id            String               @id @default(cuid())
  cartId        String
  configId      String
  quantity      Int                  @default(1)
  createdAt     DateTime             @default(now())
  cart          Cart                 @relation(fields: [cartId], references: [id], onDelete: Cascade)
  configuration ProductConfiguration @relation(fields: [configId], references: [id], onDelete: Cascade)
}

model ShopOrder {
  id                String   @id @default(cuid())
  userId            String
  items             Json
  status            String   @default("pending")
  paymentStatus     String   @default("pending")
  shippingAddress   Json
  trackingUrl       String?
  razorpayOrderId   String?
  razorpayPaymentId String?
  cancelReason      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  amount            Float
  customerEmail     String
  customerName      String
  customerPhone     String
  paymentMethod     String   @default("online")
  trackingId        String?
  user              User     @relation(fields: [userId], references: [id])
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  subject     String
  htmlContent String
  textContent String?
  variables   Json     @default("[]")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
