generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  name          String?
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  phone         String?
  address       String?
  city          String?
  state         String?
  pincode       String?
  twoFactorSecret String?
  twoFactorEnabled Boolean      @default(false)
  classBookings ClassBooking[]
  progress      Progress[]
  purchases     Purchase[]
  reviews       Review[]
  certificates  Certificate[]
  cart          Cart?
  shopOrders    ShopOrder[]
}

model Admin {
  id               String   @id @default("admin")
  email            String   @unique
  password         String
  twoFactorSecret  String?
  twoFactorEnabled Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Course {
  id            String        @id @default(cuid())
  title         String
  subtitle      String?
  description   String
  price         Int
  originalPrice Int?
  duration      String
  lessons       Int
  level         String
  language      String        @default("Hindi/English")
  thumbnail     String?
  instructor    String        @default("Kashmira Chakraborty")
  rating        Float         @default(4.8)
  students      Int           @default(0)
  featured      Boolean       @default(false)
  published     Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  whatYouLearn  String[]
  requirements  String[]
  trailerUrl    String?
  popular       Boolean       @default(false)
  seoTitle      String?       // Optional: Custom SEO title (defaults to title)
  seoDescription String?      // Optional: Custom SEO description (defaults to subtitle)
  seoKeywords   String?       // Optional: SEO keywords
  progress      Progress[]
  purchases     Purchase[]
  curriculum    Section[]
  reviews       Review[]
  certificates  Certificate[]
}

model Section {
  id       String  @id @default(cuid())
  title    String
  lessons  Int
  duration String
  order    Int
  courseId String
  course   Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  videos   Video[]
}

model Video {
  id          String  @id @default(cuid())
  title       String
  description String?
  youtubeUrl  String
  duration    String
  order       Int
  isPreview   Boolean @default(false)
  sectionId   String
  section     Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
}

model Purchase {
  id              String   @id @default(cuid())
  userId          String
  courseId        String
  amount          Int
  status          String   @default("pending")
  razorpayOrderId String?
  razorpayPaymentId String?
  razorpaySignature String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt @default(now())
  course          Course   @relation(fields: [courseId], references: [id])
  user            User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model Progress {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  videoId   String
  timestamp Int      @default(0)
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId, videoId])
  @@map("video_progress")
}



model SiteContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("text")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClassBooking {
  id        String   @id @default(cuid())
  userId    String
  classType String
  phone     String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  rating    Int      @db.SmallInt
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId])
}

model Certificate {
  id           String   @id @default(cuid())
  userId       String
  courseId     String
  certificateId String  @unique
  issuedAt     DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  course       Course   @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId])
}

model CertificateSettings {
  id                   String @id @default(cuid())
  templateUrl          String @default("/certificates/template.png")
  studentNameX         Int    @default(562)
  studentNameY         Int    @default(400)
  studentNameWidth     Int    @default(200)
  studentNameHeight    Int    @default(40)
  courseTitleX         Int    @default(562)
  courseTitleY         Int    @default(500)
  courseTitleWidth     Int    @default(250)
  courseTitleHeight    Int    @default(40)
  dateX                Int    @default(150)
  dateY                Int    @default(700)
  dateWidth            Int    @default(150)
  dateHeight           Int    @default(30)
  certificateIdX       Int    @default(973)
  certificateIdY       Int    @default(700)
  certificateIdWidth   Int    @default(120)
  certificateIdHeight  Int    @default(30)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

// Shop Models
model ShopProduct {
  id             String              @id @default(cuid())
  name           String
  slug           String              @unique
  description    String
  price          Float
  categoryId     String?
  category       ProductCategory?    @relation(fields: [categoryId], references: [id])
  images         String[]
  badge          String?
  isFeatured     Boolean             @default(false)
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  isActive       Boolean             @default(true)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  variants       ProductVariant[]
  configurations ProductConfiguration[]
  tags           ProductTag[]
}

model ProductCategory {
  id        String        @id @default(cuid())
  name      String        @unique
  slug      String        @unique
  products  ShopProduct[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model ProductTag {
  id        String        @id @default(cuid())
  name      String        @unique
  slug      String        @unique
  color     String        @default("#8B5CF6")
  products  ShopProduct[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model ProductVariant {
  id        String      @id @default(cuid())
  productId String
  name      String
  price     Float?
  images    String[]    @default([])
  product   ShopProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model CustomSongOrder {
  id            String       @id @default(cuid())
  userEmail     String
  occasion      String
  recipientName String
  story         String
  mood          String
  style         String
  language      String       @default("English")
  length        String
  deliveryType  String
  amount        Int
  status        String       @default("pending")
  previewUrl    String?
  fullAudioUrl  String?
  posterUrl     String?
  razorpayOrderId String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model CustomSongSettings {
  id            Int      @id @default(1)
  standardPrice Int      @default(2999)
  expressPrice  Int      @default(4499)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SongSource {
  id                String            @id @default(cuid())
  type              String
  fileUrl           String?
  externalUrl       String?
  metadata          Json              @default("{}")
  createdAt         DateTime          @default(now())
  configurations    ProductConfiguration[]
}

model ProductConfiguration {
  id            String      @id @default(cuid())
  productId     String
  songSourceId  String?
  variant       String
  customText    String?
  recipientName String
  occasion      String?
  createdAt     DateTime    @default(now())
  product       ShopProduct @relation(fields: [productId], references: [id])
  songSource    SongSource? @relation(fields: [songSourceId], references: [id])
  cartItems     CartItem[]
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id            String               @id @default(cuid())
  cartId        String
  configId      String
  quantity      Int                  @default(1)
  cart          Cart                 @relation(fields: [cartId], references: [id], onDelete: Cascade)
  configuration ProductConfiguration @relation(fields: [configId], references: [id], onDelete: Cascade)
  createdAt     DateTime             @default(now())
}

model ShopOrder {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  customerName      String
  customerEmail     String
  customerPhone     String
  items             Json
  amount            Float
  paymentMethod     String    @default("online")
  status            String    @default("pending")
  paymentStatus     String    @default("pending")
  shippingAddress   Json
  trackingId        String?
  trackingUrl       String?
  razorpayOrderId   String?
  razorpayPaymentId String?
  cancelReason      String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
